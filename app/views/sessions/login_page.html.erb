<html>
<head>
  <meta charset="UTF-8">
  <title>Login</title>
</head>
<body>
<h3>Login</h3>
  <%= form_for(:session, url: login_path, role: "form") do |f| %>
    <form role="form">
      <div class="form-group">
          <%= f.email_field :email, placeholder: "E-mail"%>
      </div>
      <div class="form-group">
          <%= f.password_field :password, placeholder: "Password"%>
      </div>
      <%= f.submit %>
    </form>
  <% end %>
</body>
</html>